<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidSturdy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.Button.Style" parent="">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">@dimen/app_base_margin</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Button, Selector -->
    <style name="Widget.SelectButton.Style" parent="">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/app_base_space</item>
        <item name="android:background">@drawable/shape_border_selector_btn_radius_5</item>
        <item name="android:textAppearance">@style/Widget.SelectButton.TextAppearance</item>
    </style>

    <style name="Widget.SelectButton.TextAppearance" parent="">
        <item name="android:textColor">@color/selector_btn_text</item>
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">@dimen/font_size_3</item>
    </style>

    <!-- Just TextView Global Style -->
    <style name="Widget.TitleTextView.Style" parent="">
        <item name="android:textAppearance">@style/Widget.TitleTextView.TextAppearance</item>
    </style>

    <style name="Widget.TitleTextView.TextAppearance" parent="">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">@dimen/font_size_4</item>
    </style>



    <style name="Widget.EditText.Style" parent="">
        <item name="android:background">@drawable/shape_bordor_radius_5</item>
        <item name="android:backgroundTint">@color/gray_100</item>
        <item name="android:paddingHorizontal">@dimen/layout_space</item>
        <item name="android:paddingVertical">@dimen/layout_space</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:textAppearance">@style/Widget.EditText.TextAppearance</item>
    </style>

    <style name="Widget.EditText.TextAppearance" parent="">
        <item name="android:textSize">@dimen/edit_txt_size</item>
        <item name="android:fontFamily">@font/suit_r</item>
        <item name="android:textColor">@color/edit_color</item>
    </style>

    <style name="Widget.HelpTextView.Style" parent="">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAppearance">@style/Widget.HelpTextView.TextAppearance</item>
    </style>
    <style name="Widget.HelpTextView.TextAppearance" parent="">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:fontFamily">@font/suit_r</item>
        <item name="android:textSize">@dimen/edit_hint_size</item>
    </style>

</resources>